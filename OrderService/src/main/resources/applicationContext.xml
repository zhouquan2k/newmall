<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans.xsd
                                                   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                                                   http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
             default-lazy-init="true" >

<context:annotation-config/>

<bean  class="com.atusoft.infrastructure.impl.InfrastructureImpl"/>
<bean class="com.atusoft.infrastructure.impl.ServiceFramework" lazy-init="false"/>
<bean class="com.atusoft.messaging.kafka.KafkaMessageContext"/>
<bean class="com.atusoft.json.JsonUtil"/>
<bean class="com.atusoft.security.SecurityMgr"/>
<bean class="com.atusoft.redis.RedisUtil"/>
<bean class="io.vertx.core.Vertx" factory-method="vertx"/>




</beans>